                        <a href="/page/@item.SeoAlias/">
                            <div class="title title_font"><span class="title-text">@item.Name</span></div>
                        </a>
                    }
                    else
                    {
                        <a href="/@(item.SeoAlias)/">
                            <div class="title title_font"><span class="title-text">@item.Name</span></div>
                        </a>
                    }
                </div>
                @{
                    var clist = Model.Where(m => m.ParentId == item.Id).ToList();
                    if (clist != null && clist.Count > 0)
                    {
                        <ul class="menu-items col-xs-12">

                            @foreach (var subItem in Model.Where(x => x.ParentId == item.Id))
                            {
                                if (subItem.Type == 1)
                                {
                                    <li class="menu-item depth-1 ">
                                        <div class="title title_font"> <a href="/@subItem.SeoAlias/">@subItem.Name</a></div>
                                        <ul class="submenu"></ul>
                                    </li>
                                }
                            }
                        </ul>
                    }
                }
               
            </li>
        }
