@model HomeViewModel
@{
    ViewData["Title"] = Model.Title;
    ViewData["MetaKeyword"] = Model.MetaKeyword;
    ViewData["MetaDescription"] = Model.MetaDescription;
}
@section Scripts{
    <script src="~/client-app/controllers/home/index.js"></script>
    <script>
        var homeObj = new HomeController();
        homeObj.initialize();
    </script>
}
<!-- Slideshow  -->
<div class="main-slider" id="home">
    <div class="container">
        <div class="row">
            @*<div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 banner-left hidden-xs"><img src="/client-side/images/banner-left.jpg" alt="banner"></div>*@
            <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12 jtv-slideshow">
                <div id="jtv-slideshow">
                    <div id='rev_slider_4_wrapper' class='rev_slider_wrapper fullwidthbanner-container'>
                        <div id='rev_slider_4' class='rev_slider fullwidthabanner'>
                            <ul>
                                @foreach (var slide in Model.HomeSlides)
                                {
                                    <li data-transition='fade' data-slotamount='7' data-masterspeed='1000' data-thumb=''>
                                        <img src='@slide.Image?w=850' data-bgposition='left top' data-bgfit='cover' data-bgrepeat='no-repeat' alt="@slide.Name" />
                                    </li>
                                }
                            </ul>
                            <div class="tp-bannertimer"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- service section -->
@*@Html.Partial("_ServicePartial.cshtml")*@
<!-- Blog -->
<section class="blog-post-wrapper">
    <div class="container">
        <div class="best-title text-left">
            <h2>Our Service</h2>
        </div>
        <div class="slider-items-products">
            <div id="latest-news-slider" class="product-flexslider hidden-buttons">
                <div class="slider-items slider-width-col6">
                    @foreach (var item in Model.TopService)
                    {
                        var url = "/" + item.Category.SeoAlias + "/" + item.SeoAlias + "-" + item.Id + "/";
                        <div class="item">
                            <div class="blog-box">
                                <a href="@url"> <img class="primary-img" src="@item.Image?w=267" alt="@item.Name"></a>
                                <div class="blog-btm-desc">
                                    <div class="blog-top-desc">
                                        @*<div class="blog-date"> @item.DateCreated </div>*@
                                        <h4><a href="@url">@item.Name</a></h4>
                                        <div class="jtv-entry-meta">
                                            <i class="fa fa-user-o"></i> <strong>Admin</strong>
                                            @*<a href="#"><i class="fa fa-commenting-o"></i> <strong>15 Comments</strong></a>*@
                                        </div>
                                    </div>
                                    @*<p>@item.Description</p>*@
                                    <a class="read-more" href="@url"> Read more</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
