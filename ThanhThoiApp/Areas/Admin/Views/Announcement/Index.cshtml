@using Microsoft.AspNetCore.Authorization
@using ThanhThoiApp.Authorization
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "Quản lý thông báo";
}
@section Scripts{
    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
    <script src="~/app/controllers/announcement/index.js" asp-append-version="true"></script>
    <script>
        var announcementObj = new AnnouncementController();
        announcementObj.initialize();</script>
}
@section Styles{
    <link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker.css" rel="stylesheet" />
}
<input type="hidden" id="hid-category-id" value="0" />
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Thông báo</h3>
        </div>
        <div class="title_right">
            <div class="col-md-2 col-sm-2 col-xs-12 form-group pull-right top_search">
                @{
                    var result = await AuthorizationService.AuthorizeAsync(User, "USER", Operations.Create);
                }
                @if (result.Succeeded)
                {
                    <button class="btn btn-success" id="btn-create" type="button">Tạo mới</button>
                }
            </div>
            <div class="col-md-10 col-sm-10 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" id="txt-search-keyword" class="form-control" placeholder="Keyword...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" id="btn-search" type="button">Search!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_content">
                    <table id="tbl-product" class="table table-striped table-bordered nowrap">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Tiêu đề</th>
                                <th>Thời gian</th>
                                <th>Nội dung</th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="tbl-content"></tbody>
                    </table>
                    <div class="row">
                        <div class="col-sm-5">
                            <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                                <select id="ddl-show-page">
                                    <option value="10" selected="selected">10</option>
                                    <option value="20">20</option>
                                    <option value="30">30</option>
                                    <option value="50">50</option>
                                </select>
                                <span class="item-per-page">
                                    recors/page.
                                </span>
                                Total records: <strong id="lbl-total-records"></strong>
                            </div>
                        </div><div class="col-sm-7">
                            <div class="dataTables_paginate" id="datatable-checkbox_paginate">
                                <ul id="paginationUL"></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script id="table-template" type="x-tmpl-mustache">
        <tr>
            <td>{{Id}}</td>
            <td>{{Title}}</td>
            <td>{{{DateModified}}}</td>
            <td>{{Content}}</td>
            <td>{{{Status}}}</td>
            <td>
                @if ((await AuthorizationService.AuthorizeAsync(User, "USER", Operations.Update)).Succeeded)
        {
            <a href="#" data-id="{{Id}}" class="btn-edit"><i class="fa fa-pencil-square-o"></i></a>
}
                @if ((await AuthorizationService.AuthorizeAsync(User, "USER", Operations.Delete)).Succeeded)
    {
            <a href="#" data-id="{{Id}}" class="btn-delete"><i class="fa fa-trash-o"></i></a>

}
                <a href="#" data-id="{{Id}}" class="btn-view"><i class="fa fa-eye"></i></a>
            </td>
        </tr>
    </script>
</div>
@Html.Partial("_AddEditModal.cshtml")
@Html.Partial("_DetailModal.cshtml")