            var plist = Model.Where(m => m.ParentId == null).ToList();
            var root = item.Type == 1 ? "demo_custom_link_cms" : "";
            <li class="mt-root @root">
                <div class="mt-root-item">
                    @if (item.Type == 2)
                    {
                        <a href="/@item.SeoAlias/">
                            <div class="title title_font"><span class="title-text">@item.Name</span></div>
                        </a>
                    }
                    else if (item.Type == 3)
