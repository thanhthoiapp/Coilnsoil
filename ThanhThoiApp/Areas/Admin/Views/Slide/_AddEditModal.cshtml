<div id="modal-add-edit" class="bootbox modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Thêm/sửa Slide</h4>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">
                    <form class="form-horizontal" role="form" id="frmMaintainance">
                        <div class="form-group">
                            <input type="hidden" id="hidIdM" value="0" />
                            <label for="txtNameM" class="col-sm-2 control-label no-padding-right">Tên</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtNameM" class="form-control" id="txtNameM">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtGroupAliasM" class="col-sm-2 control-label no-padding-right">Alias</label>
                            <div class="col-sm-10">
                                <select id="ddlGroupAliasIdM" name="ddlGroupAliasIdM">
                                    Chọn vị trí
                                    <option value="brand">Logo đối tác</option>
                                    <option value="top">Slide hình lớn</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtContentM" class="col-sm-2 control-label no-padding-right">Nội dung</label>
                            <div class="col-sm-10">
                                <textarea id="txtContentM" rows="6" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtDescripM" class="col-sm-2 control-label no-padding-right">Mô tả</label>
                            <div class="col-sm-10">
                                <textarea id="txtDescripM" rows="6" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtImageM" class="col-sm-2 control-label no-padding-right">Hình đại diện</label>
                            <div class="col-sm-6">
                                <div class="input-group">
                                    <input type="text" name="txtImageM" class="form-control" id="txtImageM" />
                                    <input type="file" id="fileInputImage" style="display:none" />
                                    <span class="input-group-btn">
                                        <input type="button" id="btnSelectImg" class="btn btn-default" value="Browser" />
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtDisplayOrderM" class="col-sm-2 control-label no-padding-right">Vị trí</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtDisplayOrderM" class="form-control" id="txtDisplayOrderM">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtUrlM" class="col-sm-2 control-label no-padding-right">Đường dẫn</label>
                            <div class="col-sm-10">
                                <input type="text" name="txtUrlM" class="form-control" id="txtUrlM">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="ckStatusM">
                                        <span class="text">Kích hoạt.</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="button" id="btnSaveM" class="btn btn-success">Lưu</button>
                                <button type="button" id="btnCancelM" data-dismiss="modal" class="btn btn-danger">Đóng</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>